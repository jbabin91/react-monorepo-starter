{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "web-theme",
  "projectType": "library",
  "sourceRoot": "packages/web-theme/src",
  "tags": ["web", "ui", "theme", "package"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/packages/web-theme"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/web-theme/**/*.ts",
          "packages/web-theme/package.json"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run web-theme:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run web-theme:build",
            "forwardAllArgs": false
          },
          {
            "command": "nx run web-theme:semantic-release",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release"
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/web-theme"
      },
      "outputs": ["{options.reportsDirectory}"]
    }
  }
}
