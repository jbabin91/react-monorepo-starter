{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "web-theme",
  "projectType": "library",
  "sourceRoot": "packages/web-theme/src",
  "tags": ["web", "ui", "theme"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/packages/web-theme"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/web-theme/**/*.ts",
          "packages/web-theme/package.json"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs web-theme {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "tagFormat": "web-theme-v${VERSION}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/web-theme"
      },
      "outputs": ["{options.reportsDirectory}"]
    }
  }
}
